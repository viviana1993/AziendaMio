 <!DOCTYPE hibernate-configuration PUBLIC
 "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

<session-factory>

<!-- Se voglio usare una cosa diversa da Oracle devo dichiararlo quì e poi cambiare il driver sotto.
I vari database disponibili sono in core-dialect. Oracle9 è deprecato e posso anche non metterlo ed usare solo il 10 -->
<property name="dialect">org.hibernate.dialect.Oracle9Dialect</property> 

<!-- Database connection settings -->

<property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property> 
 <property name="connection.url">jdbc:oracle:thin:@localhost:1521:xe</property> 
 <property name="connection.username">azienda</property>
 <property name="connection.password">azienda</property>

<!-- JDBC connection pool (use the built-in) -->
 <property name="connection.pool_size">1</property>

<!-- SQL dialect -->
 <!-- <property name="dialect">org.hibernate.dialect.MySQLDialect</property> -->

<property name="dialect">org.hibernate.dialect.Oracle10gDialect</property> 


 <!-- Disable the second-level cache -->
 <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

<!-- Echo all executed SQL to stdout -->
 <property name="show_sql">true</property>

<!-- Drop and re-create the database schema on startup -->
 <property name="hbm2ddl.auto">create</property>


<!-- Imposto il percorso dove si trova la classe dalla queale voglio che mi crei la tabella -->
<mapping class="bean.AdminBean" />
<mapping class="bean.ClienteBean" />
<mapping class="bean.DipendenteBean" />
<mapping class="bean.UtenteBean" />
<mapping class="model.Rubrica" />
<mapping class="model.Voce" />
 </session-factory>

</hibernate-configuration>